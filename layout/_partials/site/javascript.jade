script.
	$(document).ready(function() { 
		$('.menu-button-nav').sideNav();

		$('.image-parallax').parallax();

		$('.dropdown-button').dropdown();

		$('.list-post-body').each(function(i) {
			$(this).find('img').each(function(){
				if ($(this).hasClass('responsive-img')){
					 return;	
				}
				$(this).addClass('responsive-img');
				$(this).css({display:'block', margin: '0 auto', width: '80%', height: '80%'});
			});
		});

		$('.post-body').each(function(i) {
			$(this).find('img').each(function(){
				if ($(this).hasClass('responsive-img')){
					 return;	
				}
				$(this).wrap('<a href="' + this.src + '" target="_blank"></a>');
				$(this).addClass('responsive-img');
				$(this).css({display:'block', margin: '0 auto', width: '80%', height: '80%'});
			});
		});
	});
